<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_16sdp"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:background="@drawable/background_rounded_outlined_grey"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <TextView
        android:id="@+id/tv_recommendation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Running" />


    <TextView
        android:id="@+id/tv_recommendation_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/subtitleText"
        app:layout_constraintTop_toTopOf="@id/tv_recommendation_time"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="400 Cal" />

    <TextView
        android:id="@+id/tv_recommendation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/subtitleText"
        app:layout_constraintTop_toBottomOf="@id/tv_recommendation_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="41 Mins" />

</androidx.constraintlayout.widget.ConstraintLayout>